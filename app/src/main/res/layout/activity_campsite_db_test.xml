<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Campsite_DB_Test">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CampsiteId:"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/CampsiteIdGui"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Auto Assigned"
                    android:textSize="15sp"/>

                <Button
                    android:id="@+id/BtnPrevGui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prev"
                    android:onClick="BtnPrevGui"/>

                <Button
                    android:id="@+id/BtnNextGui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:onClick="BtnNextGui"/>


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/CampsiteNameGui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text=""
                    android:layout_weight="1"
                    android:textSize="15sp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City:"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/CampsiteCityGui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text=""
                    android:layout_weight="1"
                    android:textSize="15sp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location:"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/CampsiteLocationGui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:textSize="15sp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avg Rating:"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/CampsiteAvgRatingGui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text=""
                    android:layout_weight="1"
                    android:textSize="15sp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Features:"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorite:"
                    android:textSize="20sp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/RiversideCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Riverside"
                    android:textSize="15sp"/>

                <CheckBox
                    android:id="@+id/FavoriteCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="15sp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/GrillCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grill"
                    android:textSize="15sp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/RestroomsCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restrooms"
                    android:textSize="15sp"/>
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Rating:"
                    android:textSize="20sp"/>
                <!-- No idea how to do this guy-->
                <Spinner
                    android:id="@+id/spinnerRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown"
                    android:textSize="20sp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Details:"
                    android:textSize="20sp"/>
            </TableRow>


        </TableLayout>
        <!-- No idea if this is the right way to do this...need more real estate-->
        <EditText
            android:id="@+id/CampsiteDetailsGui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textMultiLine"
            android:text="" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/AddBtnGui"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:onClick="AddRecord"/>

                <Button
                    android:id="@+id/DeleteBtnGui"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:onClick="DeleteRecord"/>

                <Button
                    android:id="@+id/SearchBtnGui"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search Name"
                    android:onClick="SearchByName"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/CreateDBBtnGui"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="CampDetailsBtn"
                    android:text="Camp Details" />

                <Button
                    android:id="@+id/UpdateBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="UpdateRecBtn"
                    android:text="Update" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>