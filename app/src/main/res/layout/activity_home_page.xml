<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        android:text="Search:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SearchNameBtnGui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By Name, City or Feature "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:onClick="SearchNameCityLocClick"/>

    <Button
        android:id="@+id/SearchLocationBtnGui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By Current Location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SearchNameBtnGui"
        android:onClick="SearchCurrentLocationClick"/>



    <TextView
        android:id="@+id/OtherTextGui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/SearchLocationBtnGui" />

    <Button
        android:id="@+id/YourFavBtnGui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="YourFavoriteClick"
        android:text="Your Favorites"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OtherTextGui" />

    <Button
        android:id="@+id/AddSiteMapBtnGui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="AddSiteClick"
        android:text="Add Site By Map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/YourFavBtnGui" />


</androidx.constraintlayout.widget.ConstraintLayout>